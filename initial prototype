def process_csv(filename):
    data = open(filename, 'r')

    for line in data:
        values = line.split(',')
        result = []
        for v in values:
            if v.strip():
                result.append(v.lower())

        print(result)

    return result
      </code></pre>
    </div>

    <!-- Right Panel -->
